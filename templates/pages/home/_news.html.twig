<div class="c-content-box c-size-md c-bg-white">
  <div class="container">
    <div class="c-content-bar-2 c-opt-1">
      <div class="row">
      <div class="col-md-6">
        <div class="c-content-title-1 c-theme c-title-md c-margin-t-40">
          <h3 class="c-font-bold c-font-uppercase">お知らせ</h3>
        </div>
        <div>
          <ul class="c-content-recent-posts-1">
            {% for item in datas.news %}
            <li>
              <div class="c-post">
                <a href="{{ item.link }}" class="c-title">
                  {{ item.title | raw }}
                </a>
                <div class="c-date">{{ item.date }}</div>
              </div>
            </li>
            {% endfor %}
          </ul>
        </div>
      </div>
      <div class="col-md-6">
        <div class="c-content-title-1 c-theme c-title-md c-margin-t-40">
          <h3 class="c-font-bold c-font-uppercase">ピックアップ</h3>
        </div>
        <div class="c-content-v-center c-bg-red" data-height="height">
          <div class="c-wrapper">
            <div class="c-body c-center">
              <h3 class="c-font-white c-font-bold">{{ datas.pickup.text | raw }}</h3>
              <br>
              <a href="{{ datas.pickup.link }}" class="btn btn-md c-btn-square c-theme-btn c-btn-uppercase c-btn-bold">
                {{ datas.pickup.button }}
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>