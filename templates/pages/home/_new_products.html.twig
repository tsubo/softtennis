<div class="c-content-box c-size-md c-overflow-hide c-bs-grid-small-space">
  <div class="container">
    <div class="c-content-title-4">
      <h3 class="c-font-uppercase c-center c-font-bold c-line-strike">
        <span class="c-bg-white">新着商品</span>
      </h3>
    </div>
    <div class="row">
      <div data-slider="owl">
        <div class="owl-carousel owl-theme c-theme owl-small-space c-owl-nav-center" data-rtl="false" data-items="4" data-slide-speed="8000">
          {% for item in datas.new_products %}
          <div class="item">
            <div class="c-content-product-2 c-bg-white c-border">
              <div class="c-content-overlay">
                <div class="c-label c-bg-red c-font-uppercase c-font-white c-font-13 c-font-bold">New</div>
                <div class="c-overlay-wrapper">
                  <div class="c-overlay-content">
                    <a href="{{ item.link }}" class="btn btn-md c-btn-grey-1 c-btn-uppercase c-btn-bold c-btn-border-1x c-btn-square">詳しく見る</a>
                  </div>
                </div>
                <div class="c-bg-img-center-contain c-overlay-object" data-height="height" style="height: 270px; background-image: url('{{ item.img }}');"></div>
              </div>
              <div class="c-info">
                <p class="c-title c-font-18 c-font-slim">{{ item.name | raw }}</p>
                <p class="c-price c-font-16 c-font-slim">&yen;{{ item.discount_price }} &nbsp;
                  <span class="c-font-16 c-font-line-through c-font-red">&yen;{{ item.fixed_price }}</span>
                </p>
              </div>
            </div><!-- .c-content-product-2 -->
          </div><!-- .item -->
          {% endfor %}
        </div><!-- .owl-carousel -->
      </div><!-- data-slider -->
    </div><!-- .row -->
  </div><!-- .container -->
</div>
<!-- END: CONTENT/SHOPS/SHOP-2-2 -->